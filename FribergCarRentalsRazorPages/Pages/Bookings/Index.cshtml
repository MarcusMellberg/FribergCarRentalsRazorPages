@page
@model FribergCarRentalsRazorPages.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="center">All bookings in the system</h1>

<div class="div-route-links-top-table">
    <a asp-page="Create" class="route-links">-Add a new booking-</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="route-links-table">-Edit-</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="route-links-table">-Details-</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="route-links-table">-Delete-</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="div-route-links">
    <a asp-page="/Admins/LoggedIn" class="route-links">Back to account overview</a>
</div>