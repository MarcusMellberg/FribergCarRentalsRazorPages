@page
@model FribergCarRentalsRazorPages.Pages.Bookings.LoggedInBookingsModel

@{
    ViewData["Title"] = "LoggedInBookings";
}

<h1 class="center">Bookings on this account</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                    <a asp-page="/Bookings/LoggedInDetails" asp-route-id="@item.Id" class="route-links-table">-Details-</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="div-route-links">
    <a asp-page="/Customers/LoggedIn" class="route-links">-Back to account overview-</a>
</div>