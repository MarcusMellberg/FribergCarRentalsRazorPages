@page
@model FribergCarRentalsRazorPages.Pages.Bookings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="center">Booking information</h1>

<div class="div-center-list-booking">
    <div class="div-list-background-booking">
        <dl>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Booking.Id):
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.Id)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Booking.CostPerDay):
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.CostPerDay)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Booking.totalDays):
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.totalDays)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Booking.TotalCost):
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.TotalCost)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Booking.StartDate):
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.StartDate)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Booking.EndDate):
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.EndDate)
            </dd>
            <dt class="list-label">
                Customer:
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.Customer.FirstName) @Html.DisplayFor(model => model.Booking.Customer.LastName)
            </dd>
            <dt class="list-label">
                Car:
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Booking.Car.Brand) @Html.DisplayFor(model => model.Booking.Car.Model)
            </dd>
        </dl>
        <img src=@Html.DisplayFor(model => model.Booking.Car.Image) width="90%" height="auto" />
    </div>
</div>
<div class="div-route-links">
    <a asp-page="./Edit" asp-route-id="@Model.Booking.Id" class="route-links">-Edit-</a> |
    <a asp-page="./Index" class="route-links">-Back to List-</a>
</div>
