@page
@model FribergCarRentalsRazorPages.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="center">Edit account information</h1>

<div class="div-center">
    <div class="div-form-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />

            <label asp-for="Customer.FirstName" class="form-label"></label>
            <input asp-for="Customer.FirstName" class="form-input" />
            <span asp-validation-for="Customer.FirstName" class="text-danger"></span>


            <label asp-for="Customer.LastName" class="form-label"></label>
            <input asp-for="Customer.LastName" class="form-input" />
            <span asp-validation-for="Customer.LastName" class="text-danger"></span>


            <label asp-for="Customer.Email" class="form-label"></label>
            <input asp-for="Customer.Email" class="form-input" />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>


            <label asp-for="Customer.Password" class="form-label"></label>
            <input asp-for="Customer.Password" class="form-input" />
            <span asp-validation-for="Customer.Password" class="text-danger"></span>


            <input type="submit" value="Save" class="input-positive" />

        </form>
    </div>
</div>

<div class="div-route-links">
    <a asp-page="./Index" class="route-links">-Back to List-</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
