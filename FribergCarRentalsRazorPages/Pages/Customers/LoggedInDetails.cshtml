@page
@model FribergCarRentalsRazorPages.Pages.Customers.LoggedInDetailsModel

@{
    ViewData["Title"] = "LoggedInDetails";
}

<h1 class="center">Account Information</h1>

<div class="div-center-list-booking">
    <div class="div-list-background-booking">
 
        <dl>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Customer.FirstName)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Customer.FirstName)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Customer.LastName)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Customer.LastName)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Customer.Email)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Customer.Email)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Customer.Password)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Customer.Password)
            </dd>
        </dl>
    </div>
</div>
<div class="div-route-links">
    <a asp-page="/Customers/LoggedInEdit" asp-route-id="@Model.Customer.Id" class="route-links">-Edit your information here-</a> |
    <a asp-page="/Customers/LoggedIn" class="route-links">-Back to account overview-</a>
</div>
