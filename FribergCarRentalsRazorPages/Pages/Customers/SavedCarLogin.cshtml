@page
@model FribergCarRentalsRazorPages.Pages.Customers.SavedCarLoginModel
@{
    ViewData["Title"] = "SavedCarLogin";
}

<h1 class="center">Login to your customer account</h1>

<div class="div-center">
    <div class="div-form-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Customer.Email" class="form-label"></label>
            <input asp-for="Customer.Email" class="form-input" placeholder="Your Email here..." />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
            <label asp-for="Customer.Password" class="form-label"></label>
            <input asp-for="Customer.Password" class="form-input" placeholder="Your Password here..." />
            <span asp-validation-for="Customer.Password" class="text-danger"></span>

            <input type="submit" value="Login" class="input-positive" />
        </form>
    </div>
</div>

<div class="div-route-links">
    <a asp-page="/Index" class="route-links">-Back to homepage-</a> | <a asp-page="/Customers/HomeCreate" class="route-links">-Register a new account here-</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

