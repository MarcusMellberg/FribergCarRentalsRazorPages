@page
@model FribergCarRentalsRazorPages.Pages.Cars.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="center">Remove a car from the fleet</h1>


<div class="div-center-list-car">
    <div class="div-list-background-car">
        <dl class="row">
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Car.Brand)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Car.Brand)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Car.Model)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Car.Model)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Car.RentPricePerDay)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Car.RentPricePerDay)
            </dd>
            <dt class="list-label">
                @Html.DisplayNameFor(model => model.Car.Bookable)
            </dt>
            <dd class="list-data">
                @Html.DisplayFor(model => model.Car.Bookable)
            </dd>
        </dl>
        <img src=@Html.DisplayFor(model => model.Car.Image) width="90%" height="auto" />
        <div class="center-submit-del">
        <form method="post">
            <input type="hidden" asp-for="Car.Id" />
                <input type="submit" value="Delete" class="input-negative" />
        </form>
        </div>
    </div>
</div>

<div class="div-route-links">
    <a asp-page="./Index" class="route-links">-Back to List-</a>
</div>