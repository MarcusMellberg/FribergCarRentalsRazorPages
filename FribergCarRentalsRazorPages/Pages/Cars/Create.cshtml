@page
@model FribergCarRentalsRazorPages.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a new car to the fleet</h1>

<h4>The new car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.RentPricePerDay" class="control-label"></label>
                <input asp-for="Car.RentPricePerDay" class="form-control" />
                <span asp-validation-for="Car.RentPricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Car.Bookable" /> @Html.DisplayNameFor(model => model.Car.Bookable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Car.Image" class="control-label"></label>
                <input asp-for="Car.Image" class="form-control" />
                <span asp-validation-for="Car.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
