@page
@model FribergCarRentalsRazorPages.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="center">Edit the car information saved in system</h1>


<div class="div-center">
    <div class="div-form-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            
                <label asp-for="Car.Brand" class="form-label"></label>
                <input asp-for="Car.Brand" class="form-input" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            
          
                <label asp-for="Car.Model" class="form-label"></label>
                <input asp-for="Car.Model" class="form-input" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
        
           
                <label asp-for="Car.RentPricePerDay" class="form-label"></label>
                <input asp-for="Car.RentPricePerDay" class="form-input" />
                <span asp-validation-for="Car.RentPricePerDay" class="text-danger"></span>
       
           
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Car.Bookable" /> @Html.DisplayNameFor(model => model.Car.Bookable)
                </label>
         
           
                <label asp-for="Car.Image" class="form-label"></label>
                <input asp-for="Car.Image" class="form-input" />
                <span asp-validation-for="Car.Image" class="text-danger"></span>
         
           
                <input type="submit" value="Save" class="btn btn-primary" />
           
        </form>
    </div>
</div>

<div class="div-route-links">
    <a asp-page="./Index" class="route-links">-Back to List-</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
