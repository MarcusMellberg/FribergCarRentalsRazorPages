@page
@model FribergCarRentalsRazorPages.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="center">All the cars in the fleet</h1>

<div class="div-route-links-top-table">
    <a asp-page="Create" class="route-links">-Add new car to the fleet-</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].RentPricePerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Bookable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentPricePerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bookable)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="route-links-table">-Edit-</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="route-links-table">-Details-</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="route-links-table">-Delete-</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="div-route-links">
<a asp-page="/Admins/LoggedIn" class="route-links">-Back to account overview-</a>
</div>