@page
@model FribergCarRentalsRazorPages.Pages.Cars.BookableCarsModel

@{
    ViewData["Title"] = "BookableCars";
}

<h1 class="center">All the cars we have available</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].RentPricePerDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentPricePerDay)
            </td>
            <td>
                    <a asp-page="/Cars/LoggedInDetails" asp-route-id="@item.Id" class="route-links-table">-Details-</a> |
                    <a asp-page="/Bookings/CustomerCreate" asp-page-handler="WithCar" asp-route-id="@item.Id" class="route-links-table">-Book this car-</a>
            </td>    
        </tr>
}   
    </tbody>
</table>
<div class="div-route-links">
    <a asp-page="/Customers/LoggedIn" class="route-links">-Back to account overview-</a>
</div>
