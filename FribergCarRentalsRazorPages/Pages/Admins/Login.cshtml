@page
@model FribergCarRentalsRazorPages.Pages.Admins.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="center">Login to your admin account</h1>

<div class="div-center">
    <div class="div-form-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Admin.Email" class="form-label"></label>
            <input asp-for="Admin.Email" class="form-input" placeholder="Your Email here..." />
            <span asp-validation-for="Admin.Email" class="text-danger"></span>
            <label asp-for="Admin.Password" class="form-label"></label>
            <input asp-for="Admin.Password" class="form-input" placeholder="Your Password here..." />
            <span asp-validation-for="Admin.Password" class="text-danger"></span>

            <input type="submit" value="Login" class="input-positive" />
        </form>
    </div>
    <div class="div-route-links">
        <a asp-page="/Index" class="route-links">-Back to homepage-</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
